<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ImageEditDeleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--상단바-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >
            <TextView
                android:id="@+id/edit_delete_textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진 이름"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_gravity="center|left"
                android:layout_marginLeft="30dp"
                app:tint="@color/black"
                />
        </FrameLayout>
        <!--밑줄 선-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A8A8A8"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/edit_delete_image"
                    android:layout_width="370dp"
                    android:layout_height="300dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/edit_delete_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleLine="true"
                    app:singleSelection="false"
                    style="@style/CustomChipStyle"
                    android:clickable="false"
                    >

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/edit_delete_chip_09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_baseline_thumb_up_24"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/edit_delete_textview_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="명이 추천합니다"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="right"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/edit_delete_textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000원"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:gravity="right"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="40dp"
                >

                <Button
                    android:id="@+id/edit_delete_btn_delete"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:textColor="#845EC2"
                    android:textStyle="bold"
                    android:backgroundTint="#FFFFFF"
                    android:layout_margin="10dp"
                    />

                <Button
                    android:id="@+id/edit_delete_btn_edit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#845EC2"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>